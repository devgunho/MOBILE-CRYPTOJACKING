<script>	
	var c_value = $.cookie("atfpd");
	var flag1="0";
	var flag2="0";
	var flag3="0";
	 if(c_value != null && c_value != ""){
		 flag1=c_value.charAt(0);
		 flag2=c_value.charAt(1);
		 flag3=c_value.charAt(2);
	}
 
	 googletag.cmd.push(function () {
		
		
		
		googletag.pubads().setTargeting("A",flag1);
		googletag.pubads().setTargeting("G",flag2);
		googletag.pubads().setTargeting("M",flag3);
		
		
	
	 });
	
	
var showAds = true;
 
 
		 
	
	 googletag.cmd.push(function() {
		googletag.pubads().enableAsyncRendering();
		googletag.pubads().collapseEmptyDivs();
		googletag.pubads().setCentering(true);		
		if(cookieutilities.getCookieStatus("bt_cookie_policy")){
			var bt_cookie_policy = JSON.parse(cookieutilities.getCookie("bt_cookie_policy"));
			if(!bt_cookie_policy.targeting){
						googletag.pubads().setCookieOptions(1);
			}
		}        		
		if(showAds){			
			googletag.pubads().enableSingleRequest();
			googletag.enableServices();
		}		
	}); 
	 
	 
	 function handleAdRefresh(adslotid) {
		window.namespace = window.namespace || {};
		window.namespace.googleads = window.namespace.googleads || {};
		window.namespace.googleads[adslotid] = window.namespace.googleads[adslotid] || {};
	    var btgoogleads = window.namespace.googleads[adslotid];
		var flag = (typeof(isFullScreenMode) == 'function') ? isFullScreenMode() : false ;		
	    if (flag) {
			if (btgoogleads["intervalId"] != null) {
				clearInterval(btgoogleads["intervalId"]);
				btgoogleads["intervalId"] = null;
			}
	  	}
	    else {
			if (btgoogleads['refreshable']) {
				if (btgoogleads["intervalId"] != null) {
					btgoogleads["intervalId"] = setInterval(function(){googletag.pubads().refresh([btgoogleads["slotdef"]]);}, btgoogleads["refreshinterval"]);
				}
	 		}
		 }
	}
	 
	
