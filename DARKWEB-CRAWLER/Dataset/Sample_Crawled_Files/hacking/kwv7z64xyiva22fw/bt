$=LITHIUM.jQuery;

(function(w, l, undefined) {
    'use strict';

    if (!l) {
        return;
    }

    var cjo 	= l.CommunityJsonObject;
    var config 	= cjo.Config;


	var apn = "Con:SandA:Forums:";  	//  Adobe Page Name

    
	    var path 	= cjo.WebTracking.path
						.replace(/\\\//g, "<#>" )
						.split( "/" )
							.slice( 1 )
							.map(
								function( str ) {
									return str.replace( /<#>/g, "/" )
								});

	    var path_len	= path.length;
	    var nodeToName 	= function( str ) {
	    	return str.split( ":" )[1];
	    }


	    if ( new RegExp( /^Message:/ ).test( path[ path_len-1 ] ) ) {

	        apn += path.slice( 0, -1 ).map( nodeToName ).join( ":" ) + ":Thread View";
	    
	    } else if (w.location.pathname.indexOf('search') > -1) {
	    
	        apn += 'Search Results Page';
	    
	    } else {

	        switch ( cjo.CoreNode.nodeType ) {

	            case 'Community':
	                
	                apn += 'Home Page';

	                break;

	            case 'Category':

	            	apn += path.map( nodeToName ).join( ":" ) + ":Category View";

	                break;

	            case 'Board':

	            	apn += path.slice( 0, -1 ).map( nodeToName ).join( ":" ) + ":Board View";

	                break;

	            default:
	            	//  Do nothing
	                break;

	        }
	    }


    w.digitalData = {
    	"application": {
    		"name": "community",
    		"environment": ( config.phase === "prod" ) ? "production": "staging",
    		"version": config["app.revision"],
    		"is_spa": false
    	},
    	page: {
    		"id": cjo.Page.object.id,
    		"name": cjo.Page.name,
    		"title": path.slice( -1 ).map( nodeToName )[0],
    		"breadcrumb": path.slice( 0, -1 ).map( nodeToName ),
    		"timestamp": new Date()
    	},
    	"user": {
    		"is_logged_in": false
    	},
        event: [],
        system: [],
        "vendor": {
        	"adobe": {
        		"analytics": {
        			"pageName": apn
        		}
        	}
        }
    };


    if ( typeof _exhaust == "object" ) {
    	_exhaust.trigger( "Page.viewed" );
    }

})(window, window.LITHIUM);
</script>

