<script type="text/javascript">
if(cookieutilities.getCookieStatus("bt_cookie_policy")){
	var bt_cookie_policy = JSON.parse(cookieutilities.getCookie("bt_cookie_policy"));
	if(bt_cookie_policy.targeting){
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
		var urlToSend = safeUrl(decodeURL(window.location.href));
		ga('create', 'UA-35439723-1', 'bt.com');
		ga('set', 'location', urlToSend);
		ga('send', 'pageview');
		ga('require', 'displayfeatures');
		ga('set', 'anonymizeIp', true);
	}
}

function decodeURL(originalUrl) {
	//a failed login attempt could result in the userid appearing in the URL for a redirection back to login page.
	//this could happen up to 3 times after which the user would be logged out
	//therefore the decode should be applied 3 or more times to makes sure it is fully decoded before the search for the @ character starts
	var decodedUrl = originalUrl;
	for (i=0;i<5;i++) {
		decodedUrl = decodeURIComponent(decodedUrl);
	}
	return decodedUrl;
}

function safeUrl(theUrl) {
	var disallowedChars = ["@"];
	var fullAllowed = true;
	for (j=0;j<disallowedChars.length;j++) {
		
		if (theUrl.indexOf(disallowedChars[j]) >= 0) {
			fullAllowed = false;
		}
	}
	
	if (fullAllowed) {
		return theUrl;
	}
	else {
		return theUrl.split("?")[0];
	}
	
}

</script>
