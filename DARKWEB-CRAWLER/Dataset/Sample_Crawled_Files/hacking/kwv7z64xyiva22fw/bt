if(cookieutilities.getCookieStatus("bt_cookie_policy")){
	var bt_cookie_policy = JSON.parse(cookieutilities.getCookie("bt_cookie_policy"));
	if(bt_cookie_policy.targeting){
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
		var urlToSend = safeUrl(decodeURL(window.location.href));
		ga('create', 'UA-35439723-1', 'bt.com');
		ga('set', 'location', urlToSend);
		ga('send', 'pageview');
