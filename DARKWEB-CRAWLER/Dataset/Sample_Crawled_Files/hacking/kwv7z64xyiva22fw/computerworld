    function runClarity(){
      var dynamic_key_val_api = "/script-tagger/clarity/json/";
      var first_page_context_data = {
        'event_type':"pageview",'author':"Gregg Keizer",'word_count':846,'publication_datetime':"2008-08-12T21:21:21+00:00",'score':1,'content_type':"article",'content_id':1618160675
