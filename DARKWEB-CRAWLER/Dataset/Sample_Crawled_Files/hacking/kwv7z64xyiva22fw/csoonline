<script type="text/javascript">
$(function() {
	var MOBILE_BREAK = 929;
	
	if ($(window).width() <= MOBILE_BREAK) {
		executeDRRMobile();
	} else {
		// Desktop
		executeDRRDesktop();
	}
});

function executeDRRMobile() {
	//For mobile only, place zipRecruiter after 8th paragraph.
	var $zipRecruiter = $('.zip-recruiter-wrapper');
	if ($zipRecruiter.length) {		
		$zipRecruiter.remove();	
	}
}

</script>
	
	<script>
	$(document).ready(function($){
		$(function(){
			$(".signin-register > a.signin, .signin-register > a.register").click(function(){
			    $(".signin-register > a.signin, .signin-register > a.register").removeClass("selected");
			    $(this).addClass("selected");
			    return false;
			});
		});
		
	   if(typeof(IDG.insiderReg.readCookie('nsdr')) == 'undefined' && $thm.deviceWidthAtLeast($thm.deviceBreakpoints.tablet)){
		
		$triggered_times = 0;
		
	    $(window).on('scroll', function() {
			if($('.signin-register > a').hasClass('selected')) {
				$triggered_times = 1;
			}
            var y_scroll_pos = window.pageYOffset;
            var emptyDiv = $('.empty-div').offset().top;
            var scroll_pos_test = emptyDiv - 600;

            if(y_scroll_pos > scroll_pos_test && $triggered_times == 0 ) {
                $triggered_times = 1;   // to make sure the above action triggers only once

                IDG.insiderReg.registerLinkEvent('insider-reg-form-short');
                $('body').append("<div class='modal-overlay modal-close'></div>");
                $('.modal-overlay').fadeTo(500, 0.9);
				$('.modal-overlay').height($(document).height());
                $('#insider-popup.modal-box').fadeIn(500);
                
                if (navigator.userAgent.match(/(iPad)/)) {
					$("html, body").animate({
			            scrollTop: 0
			        }, 500);
				}
            }
	    });
	   }  
	    
	});
	</script>
	
