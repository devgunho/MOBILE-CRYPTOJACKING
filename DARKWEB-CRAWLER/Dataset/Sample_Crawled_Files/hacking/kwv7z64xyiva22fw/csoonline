<script>
window.admiral = window.admiral || function() {(admiral.q = admiral.q || []).push(arguments)};


var consent = consent || {};
consent.isEU = consent.isEU || null;
consent.personalization = consent.personalization || null;
consent.ads = consent.ads || {};
consent.ads.queue = consent.ads.queue || [];

consent.infostorage = consent.infostorage || {};
consent.infostorage.queue = consent.infostorage.queue || [];

consent.adsel = consent.adsel || {};
consent.adsel.queue = consent.adsel.queue || [];

consent.contentsel = consent.contentsel || {};
consent.contentsel.queue = consent.contentsel.queue || [];

consent.socmedia = consent.socmedia || {};
consent.socmedia.queue = consent.socmedia.queue || [];

consent.tealium = consent.tealium || {};
consent.tealium.queue = consent.tealium.queue || [];

consent.digitalelement = consent.digitalelement || {};
consent.digitalelement.queue = consent.digitalelement.queue || [];

window.admiral('addEventListener', 'cmp.loaded', function(e){
	console.log('*****GDPR: EU user?', e);
	consent.isEU = e.euVisitor;
	if (!consent.isEU) {
		console.log('*****GDPR: not EU, run ALL queues!');
		consent.personalization=true;
		$(window).trigger("runConsent", [consent.ads.queue]);
		$(window).trigger("runConsent", [consent.infostorage.queue]);
		$(window).trigger("runConsent", [consent.adsel.queue]);
		$(window).trigger("runConsent", [consent.contentsel.queue]);
		$(window).trigger("runConsent", [consent.socmedia.queue]);
		$(window).trigger("runConsent", [consent.digitalelement.queue]);
		console.log('running digitalelement queue');
		$(window).trigger("runConsent", [consent.tealium.queue]);
		//console.log ('running tealium queue');
	}
	else if (e.consentKnown == true) { // else if.. visitor is from EU and consent is known...
		window.admiral('get', 'cmp.consent', function(e) {
			consent.personalization = e.publisherPurposes['2'];

			//console.log('*****GDPR: we know your personalization setting (' + e.publisherPurposes['2'] + '), running ad queue.');
			//console.log('*****GDPR: we know your info storage setting (' + e.publisherPurposes['1'] + '), running queue if TRUE.');
			//console.log('*****GDPR: we know your ad selection setting (' + e.publisherPurposes['3'] + '), running queue if TRUE.');
			//console.log('*****GDPR: we know your content selection setting (' + e.publisherPurposes['4'] + '), running queue if TRUE.');
			//console.log('*****GDPR: we know your social media setting. It is (' + e.publisherCustomPurposes['25'] + '), running queue if TRUE.');
			
			$(window).trigger("runConsent", [consent.ads.queue]);
			if (e.publisherPurposes['1']) { // if information storage consent is TRUE run queue
				//console.log('***** Known consent and true - run info storage queue');
				$(window).trigger("runConsent", [consent.infostorage.queue]);
			}
			if (e.publisherPurposes['3']) { // if ad selection consent is TRUE run queue
				//console.log('***** Known consent and true - run ad selection queue');
				$(window).trigger("runConsent", [consent.adsel.queue]);
			}
			if (e.publisherPurposes['4']) { // if content selection consent is TRUE run queue
				//console.log('***** Known consent and true - run content selection queue');
				$(window).trigger("runConsent", [consent.contentsel.queue]);
			}
			if (e.publisherCustomPurposes['25']) { // if social media consent is TRUE run queue
				//console.log('***** Known consent and true - run social media queue');
				$(window).trigger("runConsent", [consent.socmedia.queue]);
			}
			
			//special case for Tealium
			if (e.publisherPurposes['1'] && e.publisherPurposes['2'] && e.publisherPurposes['3'] && e.publisherPurposes['4'] && e.publisherPurposes['5'] && e.vendors['522']) {
				//console.log('***** Known consent and true - run tealium queue');
				$(window).trigger("runConsent", [consent.tealium.queue]);
			}
			
			//special case for Digital Element
			if (e.publisherPurposes['2'] && e.publisherPurposes['3'] && e.publisherPurposes['4'] && e.publisherPurposes['5']) {
				console.log('***** Known consent and true - run digitalelement queue');
				$(window).trigger("runConsent", [consent.digitalelement.queue]);
			}
				
			bindReshowCmp();
		});
	}
	else {//else consent is not known
		try {
			var tealiumConsent;
	    	__cmp('getPublisherConsents',[],function(publisherConsents,success){
	    		if (typeof publisherConsents.standardPurposes['2'] !== 'undefined' && publisherConsents.standardPurposes['2']) {
	    			console.log('*****GDPR: personalization allowed, start running personalized ads');	
	    		}
	    		else if (typeof publisherConsents.standardPurposes['2'] !== 'undefined' && !publisherConsents.standardPurposes['2']) {
	    			console.log('*****GDPR: personalization not allowed, start running non-personalized ads');
	    		}
	    		consent.personalization = publisherConsents.standardPurposes['2'];
	    		$(window).trigger("runConsent", [consent.ads.queue]);
	    		
	    		if (typeof publisherConsents.standardPurposes['1'] !== 'undefined' && publisherConsents.standardPurposes['1']) {
	    			//console.log('*****GDPR: getPublishersConsent - information storage allowed, run infostorage queue');
	    			$(window).trigger("runConsent", [consent.infostorage.queue]);
	    		} else if (typeof publisherConsents.standardPurposes['1'] !== 'undefined' && !publisherConsents.standardPurposes['1']) {
	    			console.log('*****GDPR: getPublishersConsent - information storage NOT allowed, do not run infostorage queue');
	    		}
	    		if (typeof publisherConsents.standardPurposes['3'] !== 'undefined' && publisherConsents.standardPurposes['3']) {
	    			//console.log('*****GDPR: getPublishersConsent - ad selection allowed, run adsel queue');
	    			$(window).trigger("runConsent", [consent.adsel.queue]);
	    		} else if (typeof publisherConsents.standardPurposes['3'] !== 'undefined' && !publisherConsents.standardPurposes['3']) {
	    			console.log('*****GDPR: getPublishersConsent - ad selection NOT allowed, do not run adsel queue');
	    		}
	    		if (typeof publisherConsents.standardPurposes['4'] !== 'undefined' && publisherConsents.standardPurposes['4']) {
	    			//console.log('*****GDPR: getPublishersConsent - content selection allowed, run contentsel queue');
	    			$(window).trigger("runConsent", [consent.contentsel.queue]);
	    		} else if (typeof publisherConsents.standardPurposes['4'] !== 'undefined' && !publisherConsents.standardPurposes['4']) {
	    			console.log('*****GDPR: getPublishersConsent - content selection NOT allowed, do not run contentsel queue');
	    		}
	    		if (typeof publisherConsents.customPurposes['25'] !== 'undefined' && publisherConsents.customPurposes['25']) {
	    			console.log('*****GDPR: getPublishersConsent - social media allowed, run socmedia queue');
	    			$(window).trigger("runConsent", [consent.socmedia.queue]);
	    		} else if (typeof publisherConsents.customPurposes['25'] !== 'undefined' && !publisherConsents.customPurposes['25']) {
	    			console.log('*****GDPR: getPublishersConsent - social media NOT allowed, do not run socmedia queue');
	    		}
	    		
	    		//checking for Tealium purpose
	    		if (typeof publisherConsents.standardPurposes['1'] !== 'undefined' && publisherConsents.standardPurposes['1'] &&
	    				typeof publisherConsents.standardPurposes['2'] !== 'undefined' && publisherConsents.standardPurposes['2'] &&
	    				typeof publisherConsents.standardPurposes['3'] !== 'undefined' && publisherConsents.standardPurposes['3'] &&
	    				typeof publisherConsents.standardPurposes['4'] !== 'undefined' && publisherConsents.standardPurposes['4'] &&
	    				typeof publisherConsents.standardPurposes['5'] !== 'undefined' && publisherConsents.standardPurposes['5']) {
	    			tealiumConsent = true;
    				//console.log('consent for Tealium\'s purposes'); 
    				
    				//checking for Tealium consent
    		    	__cmp('getVendorConsents',[],function(vendorConsents,success){ 
    		    			if (typeof vendorConsents.vendorConsents['522'] === 'undefined' || vendorConsents.vendorConsents['522'] === false) {
    		    				tealiumConsent = false;
    		    				//console.log('no consent for Tealium the vendor'); 
    		    			}
    		    	});
	    		}
	    		else {
	    			tealiumConsent = false; 
	    			//console.log('no consent for Tealium\'s purposes');
	    		}
	    		
	    		if (typeof tealiumConsent !== 'undefined' && tealiumConsent) {
		    		$(window).trigger("runConsent", [consent.tealium.queue]);
		    		//console.log ('running tealium queue');
		    	}
	    		
	    		if (typeof publisherConsents.standardPurposes['2'] !== 'undefined' && publisherConsents.standardPurposes['2'] &&
	    				typeof publisherConsents.standardPurposes['3'] !== 'undefined' && publisherConsents.standardPurposes['3'] &&
	    				typeof publisherConsents.standardPurposes['4'] !== 'undefined' && publisherConsents.standardPurposes['4'] &&
	    				typeof publisherConsents.standardPurposes['5'] !== 'undefined' && publisherConsents.standardPurposes['5']) {
	    			$(window).trigger("runConsent", [consent.digitalelement.queue]);
	    			console.log ('running digitalelement queue');
	    		}
			});
	    	
	    	bindReshowCmp();
	    }
	    catch (e) {
	    	console.log(e);
	    }
	}
});

window.admiral('addEventListener', 'cmp.updated', function(e){
	var tConsent;
	__cmp('getPublisherConsents',[],function(publisherConsents,success){	
		//console.log('*****GDPR: Consent updated (cmp.updated fired). personalization ok? ',typeof publisherConsents.standardPurposes['2'] !== 'undefined' && publisherConsents.standardPurposes['2']);
		//console.log('*****GDPR: Consent updated (cmp.updated fired). information storage ok? ',typeof publisherConsents.standardPurposes['1'] !== 'undefined' && publisherConsents.standardPurposes['1']);
		//console.log('*****GDPR: Consent updated (cmp.updated fired). ad selection ok? ',typeof publisherConsents.standardPurposes['3'] !== 'undefined' && publisherConsents.standardPurposes['3']);
		//console.log('*****GDPR: Consent updated (cmp.updated fired). content selection ok? ',typeof publisherConsents.standardPurposes['4'] !== 'undefined' && publisherConsents.standardPurposes['4']);
		console.log('*****GDPR: Consent updated (cmp.updated fired). social media ok? ',typeof publisherConsents.customPurposes['25'] !== 'undefined' && publisherConsents.customPurposes['25']);
		if (typeof publisherConsents.standardPurposes['1'] !== 'undefined' && publisherConsents.standardPurposes['1']) {
			$(window).trigger("runConsent", [consent.infostorage.queue]);
		}
		if (typeof publisherConsents.standardPurposes['3'] !== 'undefined' && publisherConsents.standardPurposes['3']) {
			$(window).trigger("runConsent", [consent.adsel.queue]);
		}
		if (typeof publisherConsents.standardPurposes['4'] !== 'undefined' && publisherConsents.standardPurposes['4']) {
			$(window).trigger("runConsent", [consent.contentsel.queue]);
		}
		if (typeof publisherConsents.customPurposes['25'] !== 'undefined' && publisherConsents.customPurposes['25']) {
			$(window).trigger("runConsent", [consent.socmedia.queue]);
		}
		
		//checking for Tealium purpose
		if (typeof publisherConsents.standardPurposes['1'] !== 'undefined' && publisherConsents.standardPurposes['1'] &&
				typeof publisherConsents.standardPurposes['2'] !== 'undefined' && publisherConsents.standardPurposes['2'] &&
				typeof publisherConsents.standardPurposes['3'] !== 'undefined' && publisherConsents.standardPurposes['3'] &&
				typeof publisherConsents.standardPurposes['4'] !== 'undefined' && publisherConsents.standardPurposes['4'] &&
				typeof publisherConsents.standardPurposes['5'] !== 'undefined' && publisherConsents.standardPurposes['5']) {
			tealiumConsent = true;
			//console.log('consent for Tealium\'s purposes'); 
			
			//checking for Tealium consent
	    	__cmp('getVendorConsents',[],function(vendorConsents,success){ 
	    			if (typeof vendorConsents.vendorConsents['522'] === 'undefined' || vendorConsents.vendorConsents['522'] === false) {
	    				tealiumConsent = false;
	    				//console.log('no consent for Tealium the vendor'); 
	    			}
	    	});
		}
		else {
			tealiumConsent = false; 
			//console.log('no consent for Tealium\'s purposes');
		}
		
		if (typeof tealiumConsent !== 'undefined' && tealiumConsent) {
    		$(window).trigger("runConsent", [consent.tealium.queue]);
    		//console.log ('running tealium queue');
    	}
		
		if (typeof publisherConsents.standardPurposes['2'] !== 'undefined' && publisherConsents.standardPurposes['2'] &&
				typeof publisherConsents.standardPurposes['3'] !== 'undefined' && publisherConsents.standardPurposes['3'] &&
				typeof publisherConsents.standardPurposes['4'] !== 'undefined' && publisherConsents.standardPurposes['4'] &&
				typeof publisherConsents.standardPurposes['5'] !== 'undefined' && publisherConsents.standardPurposes['5']) {
			$(window).trigger("runConsent", [consent.digitalelement.queue]);
			console.log ('running digitalelement queue');
		}
	});	
	$(window).trigger("runConsent", [consent.ads.queue]);	
});

$(window).on("runConsent", function(event, queueToRun) {
		watchConsentQueue(queueToRun)
});

function runQueue(queue){
	for (var x=0;x<queue.length;x++) {
		var nextFn = queue.shift();
		nextFn();
		//console.log('*****GDPR: running queue');
	}	
}

function watchConsentQueue(queue){
	setInterval(function() { runQueue(queue); },100);
}
function bindReshowCmp() {
	var url = document.location.pathname;
	if (url.indexOf("/about/member-preferences") > -1) {
		$(".cmpSettings").show();
		$(".reshowLink").on("click", function(e) {
			e.preventDefault();
			window.admiral('show','cmp.settings');
		});
	}
}
</script>



	
	
