			var oldItem = 0;
			var newItem = 1;
			
			var x = 1;
			var y = 1;

			function next(){
				document.getElementById("next").style.display = "none";
				document.getElementById("flashPlayer").style.display = "block";
			}

			function slide(){
						if(y==1){
							if(x==count.length){
								x=count.length-1;
								jQuery("div.indexSliderLeft div.newsflash div.all-over-cont:nth-child("+x+") ").slideDown();
								y=2;
								x=count.length-1;
							}else{
								jQuery("div.indexSliderLeft div.newsflash div.all-over-cont:nth-child("+x+") ").slideUp();
								x++;
							}
						}else{
							if(x==1){
								jQuery("div.indexSliderLeft div.newsflash div.all-over-cont:nth-child("+x+") ").slideUp();
								y=1;
								x=2;
							}else{
								x--;
								jQuery("div.indexSliderLeft div.newsflash div.all-over-cont:nth-child("+x+") ").slideDown();
								
															
							}							
						}		
			}	
