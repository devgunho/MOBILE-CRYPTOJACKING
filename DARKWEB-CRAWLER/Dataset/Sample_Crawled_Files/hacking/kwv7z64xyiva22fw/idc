    $(document).ready(function(){
    $idcHeaderNav.find( '> ul > li:not(.search):not(.menu) a' ).on( 'click', function(){
    gtmNavClick( 'Main menu', this );
    } );
    function gtmNavClick( level, el ){
    dataLayer.push( {
    'NavLinkClickMenu':   level,
    'NavLinkClickParent': 1,
    'NavLinkClickItem':   $( el ).text(),
    'event':              'Nav_Link_Click'
    } );
    };
    })
