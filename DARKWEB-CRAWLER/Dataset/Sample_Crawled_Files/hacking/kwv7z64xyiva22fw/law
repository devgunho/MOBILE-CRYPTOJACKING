</div>
<!-- end ALM global stripe -->
</div>


<script type="text/javascript">



$(document).ready(function (){
	
	try {
	
	//add class to footers with site links
	var footer = $('.footer-wrapper');
	if ($('.footer-wrapper:has(.top-footer-list)').length > 0) {
		footer.addClass('hasLinks');
	}
		
    //show/hide nav elements
    $('.main-nav-left a').click( function(e){
        e.preventDefault();
        var dataControl = $(this).attr('data-controls');
        $(this).parent().siblings().removeClass('selected-section');
        $('#' + dataControl + '-div').toggle();
        $('.modal').not('#' + dataControl + '-div').hide();
        $(this).parent().toggleClass('selected-section');
    });
		
    //show/hide subnavs
    $('.section-item:not(".internal,.external,#homeLink") a').click( function(e){
        e.preventDefault();
        var sectionId = $(this).attr('href');
        $('.subsections ' + sectionId).show().siblings().hide();
        $(this).addClass('selected-section-item').parent().siblings().children().removeClass('selected-section-item');
    });
		
    //close modals
    $('#myAccountContainer').click( function(){
        $('.modal').hide();
        $('*').removeClass('selected-section');
    });
		
    //sections nav links/search form -- domain prefix
    var baseUrl = $('body').find('.footer-wrapper a'),
		//baseUrl = $('body').find('.subsection-item a,.internal a,.main-logo,.left-anchors a,#logo a,.sign-out-option'),
        searchUrl = $('#searchResultsFormFilters').attr("action"),
        dropDownSite = $('#almLinkList option'),
        signOutUrl = $('.sign-out-option'),
        homeUrl = $('#homeLink a'),
        currentDomain = document.domain;
		
    switch (currentDomain)
    {
        case 'qa.store.law.com':
            externalDomain='http://qa.';
            break;
        case 'stage.store.law.com':
            externalDomain="http://stage.";
            break;
        default:
            externalDomain="http://www.";
            break;
    }
	
	$.urlParam = function(name, url){
		if(!url){
			url = window.location.href;
		}
		var results = new RegExp('[\\?&]' + name + '=([^&#]*)', 'i').exec(url);
			if (!results)
		{ 
			return 0; 
		}
		return results[1] || 0;
	}
	
	//custom alerts search link
	var currentPromo = [$.urlParam('promocode'),$.urlParam('p'),$.urlParam('w')];
	if(currentPromo !== [0, 0, 0]) {
		currentPromo = currentPromo.toString();
		currentPromo = currentPromo.toUpperCase();
		currentPromo = currentPromo.replace(/,/g , '');
		currentPromo = currentPromo.replace(/0/g , '');
		switch (currentPromo)
		{
			case 'CA':
				noAlertsSearchLink='https://www.law.com/therecorder/search/?q=';
				break;
			case 'CC':
				noAlertsSearchLink='https://www.law.com/corpcounsel/search/?q=';
				break;
			case 'CT':
				noAlertsSearchLink='https://www.law.com/ctlawtribune/search/?q=';
				break;
			case 'DBCI':
				noAlertsSearchLink='https://www.law.com/delbizcourt/search/?q=';
				break;
			case 'DLW':
				noAlertsSearchLink='https://www.law.com/delawarelawweekly/search/?q=';
				break;
			case 'FLM':
				noAlertsSearchLink='https://www.law.com/dailybusinessreview/search/?q=';
				break;
			case 'FLB':
				noAlertsSearchLink='https://www.law.com/dailybusinessreview/search/?q=';
				break;
			case 'FLP':
				noAlertsSearchLink='https://www.law.com/dailybusinessreview/search/?q=';
				break;
			case 'GA':
				noAlertsSearchLink='https://www.law.com/dailyreportonline/search/?q=';
				break;
			case 'INTL':
				noAlertsSearchLink='https://www.law.com/international/search/?q=';
				break;
			case 'LIT':
				noAlertsSearchLink='https://www.law.com/litigationdaily/search/?q=';
				break;
			case 'LT':
				noAlertsSearchLink='https://www.law.com/legaltechnews/search/?q=';
				break;
			case 'NJ':
				noAlertsSearchLink='https://www.law.com/njlawjournal/search/?q=';
				break;
			case 'NL':
				noAlertsSearchLink='https://www.law.com/nationallawjournal/search/?q=';
				break;
			case 'NY':
				noAlertsSearchLink="https://www.law.com/newyorklawjournal/search/?q=&source=nylitnews%2clawdecision%2cnativeads&sort=date&direction=descending&start=1&end=10&returnType=json";
				break;
			case 'PA':
				noAlertsSearchLink='https://www.law.com/thelegalintelligencer/search/?q=';
				break;
			case 'SC':
				noAlertsSearchLink='https://www.law.com/supremecourtbrief/search/?q=';
				break;
			case 'TAL':
				noAlertsSearchLink='https://www.law.com/americanlawyer/search/?q=';
				break;
			case 'TX':
				noAlertsSearchLink='https://www.law.com/texaslawyer/search/?q=';
				break;
			default:
				noAlertsSearchLink="https://www.law.com/search";
				break;
		}
	}
	
	$('#noAlertsSearchLink').attr('href', noAlertsSearchLink);
	
    baseUrl.each(function() {
        baseUrlLink = $(this).attr('href');
        if (baseUrlLink.toLowerCase().indexOf('http') === -1) {
            $(this).attr('href',externalDomain + baseUrlLink);
        }
    });
    dropDownSite.each(function() {
        dropDownSiteLink = $(this).attr('value');
        if ((dropDownSiteLink.toLowerCase().indexOf('http') === -1) && (dropDownSiteLink !== '')) {
            $(this).attr('value',externalDomain + dropDownSiteLink);
        }
    });
    signOutUrl.each(function() {
        baseSignOutLink = $(this).attr('href'),
        signOutLinkSplit = baseSignOutLink.split('http://www.'),
        signOutLinkStart = signOutLinkSplit[0];
        signOutLinkSource = signOutLinkSplit[1];
        if (baseSignOutLink.toLowerCase().indexOf('source') >= 0) {
            $(this).attr('href',signOutLinkStart + externalDomain + signOutLinkSource);
        }
    });
    homeUrl.each(function() {
        baseHomeLink = $(this).attr('href');
        $(this).attr('href',externalDomain + baseHomeLink);
    });
	
	} catch (err) { }
});
</script>

<!-- end almFooter content -->
        	<!-- end begin global law footer -->
        
<script type="text/javascript">
try {
	if (s.pageName == s.server + ":store:registration:thankyou"){
		
		//Google Code for reg Conversion Page
