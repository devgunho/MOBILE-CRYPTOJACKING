<script type="text/javascript">
$(document).ready(function() { 
    try { 
    $('[name=show_upass]').prop('checked', false);  
    $('input[name=upass_hidden]').val('');  
    $('[name=show_upass]').change(function () { 
        var show = $('input[name=show_upass]').is(':checked'); 
        if (show) { 
            $('input[name=upass_hidden]').val($('input[name=upass]').val()); 
            $('input[name=upass_hidden]').keyup(); 
            $('#upass_hiddenContainer').show(); 
            $('#upassContainer').hide(); 
        } else { 
            $('input[name=upass]').val($('input[name=upass_hidden]').val()); 
            $('input[name=upass]').keyup(); 
            $('#upass_hiddenContainer').hide(); 
            $('#upassContainer').show(); 
        } 
    }); 
    $('input[name=upass_hidden]').keyup(function () { 
        $('input[name=upass]').val($('input[name=upass_hidden]').val()); 
        $('input[name=upass]').keyup(); 
    }); 
    }
    catch(e) { }

});
</script>
