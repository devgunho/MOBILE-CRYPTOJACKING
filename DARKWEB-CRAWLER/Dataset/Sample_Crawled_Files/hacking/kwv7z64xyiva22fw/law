<script type="text/javascript">
  function toggle_visibility(id, arrow) {
    var e = document.getElementById(id);
    var a = document.getElementById(arrow);
    if(e.style.display == 'block') {
        e.style.display = 'none';
        a.innerHTML = '&#128317;';
    } else {
        e.style.display = 'block';
        a.innerHTML = '&#128316;';
    }
  }
</script>
