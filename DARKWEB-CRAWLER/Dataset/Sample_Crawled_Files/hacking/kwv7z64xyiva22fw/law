        <button aria-label="Printer Friendly" class="btn print hidden-sm hidden-xs" onclick="window.open('https://www.law.com/americanlawyer/2019/04/02/law-firm-lifers-and-the-hot-lateral-market-405-34451/?printer-friendly','popup','width=667,height=889,scrollbars=yes,resizable=yes,toolbar=yes,directories=no,location=no,menubar=no,status=no,left=30,top=20'); return false"><i class="fa fa-print"></i></button>
 
        <button aria-label="Reprints" class="btn reprints"><a title="ALM Reprints" href="http://www.almreprints.com" target ="_blank"><i class="fa fa-file-text-o" aria-hidden="true"></i></a></button>
