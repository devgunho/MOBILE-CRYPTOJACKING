<script>
/*checking for data coming from sponsorship iframes */
window.addEventListener('message', function(event) {
   var targetObj; 
   if(event.data.source==='engage'){
    if(console || console.log) {
    //console.log('parent window got message');
    } 
    // defaults
    var speed = 700;

    // overrides
    if(event.data.speed){
      speed = event.data.speed;  
    }

    //console.log(event.data.action);

    switch(event.data.action){
        case 'slide-resize':
        targetObj = $('#' + event.data.id);
        var currentHeight = targetObj.height();

        $('#' + event.data.id).animate({
          height: event.data.height
        }, speed, function() {
          // Animation complete.
        });
      break;

        
    } //end switch

    

    } else {
      if(console || console.log) {
      //console.log('parent window - no message');
      }     
    }
});

</script>
