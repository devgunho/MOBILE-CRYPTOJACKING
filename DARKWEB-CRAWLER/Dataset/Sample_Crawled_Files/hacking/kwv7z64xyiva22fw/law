   <link href="css/myAccount.css" rel="stylesheet" type="text/css"/><!--fails validation, not in head section-->

   
   <script type="text/javascript">
       //Fix for IE, spaces break the tab functionality
       if (window.location.toString().indexOf(' ') > 0)
           window.location = window.location.toString().replace(' ', '%20');
       var userEmail = '';
       document.getElementById('myAccountContainer').style.display = "none"; //Do here so errors aren't hidden
   </script> 
    <script src="js/jquery-1.10.2.min.js" type="text/javascript"></script> 
