		//Yahoo Code for reg Conversion Page
		document.write('<scr'+'ipt type="text/javascript"> if (!window.mstag) mstag = {loadTag : function(){},time : (new Date()).getTime()};</scr'+'ipt>');
		
		document.write('<scr'+'ipt id="mstag_tops" type="text/javascript" src="//flex.atdmt.com/mstag/site/1e5170d9-efa1-4366-8005-fde8d755ca4d/mstag.js"></scr'+'ipt> ');
		
		document.write('<scr'+'ipt type="text/javascript">mstag.loadTag("conversion", {cp:"5050",dedup:"1"})</scr'+'ipt>');
		
		document.write('<noscript><iframe src="//flex.atdmt.com/mstag/tag/1e5170d9-efa1-4366-8005-fde8d755ca4d/conversion.html?cp=5050&dedup=1" frameborder="0" scrolling="no" width="1" height="1" style="visibility:hidden;display:none"></iframe></noscript>');
					
	}
} catch (err) { }
</script>
