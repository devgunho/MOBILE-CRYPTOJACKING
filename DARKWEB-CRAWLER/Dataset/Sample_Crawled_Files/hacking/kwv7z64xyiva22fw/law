<!-- Login v4.2.1 - 02/08/19 - Greg Sawin, Rob Daniels -->
<!-- Start of Main Content -->
<div id="container" class="loginContainer">
    <script src="js/Main.js" type="text/javascript"></script>
    <script type="text/javascript" src="js/jquery-1.10.2.min.js"></script>
    <script src="js/jQuery-Common.js"></script>
    <script src="//store.law.com/Registration/js/RSA.min.js" type="text/javascript"></script><!--Use this exactly, do not copy the file over to your server-->
    <script type="text/javascript">
        //<![CDATA[
        $(document).ready(function () {
            //Submit the form if the enter key is pressed on any input field
            $(" input").keypress(function (e) {
                var isEnterKey = ((e.which && e.which == 13) || (e.keyCode && e.keyCode == 13));
                if (isEnterKey) {
                    $('input[type="submit"]', $(this).parents("form:first")).click();
                    return false;
                } else
                    return true;
            });
        });
    </script>
    
    
<!--Ajax UserControl start -->
    <script type="text/javascript">
        try {
            //Global variables used by Ajax Login

            var loginInProgress = false;
            var loginRequestNum = 0;
            var loginTimeout = 10000; //10sec
            var loginSkipRedirect = false;
            var preLoginJavascript = (typeof null !== 'undefined') ? null : null;
            var postLoginJavascript = (typeof null !== 'undefined') ? null : null;
            var loginErrorJavascript = (typeof null !== 'undefined') ? null : null;
            var inlineDisplay = false;
            var statusMessageSelector = '';
            var inlineFormDetectionElementID = 'ajaxLoginControl'; //Used to find the form if inline
            //Preload the ajax image to minimize lag and duplicate calls
            //var ajaxLoaderImg = new Image();
            //$(ajaxLoaderImg).attr('src', 'images/ajax-loader.gif');

            var loginFormId = 'loginForm';
            var loginFormSelector = '#' + loginFormId;
            var loginStatusSelector = loginFormSelector + ' .ajaxStatus';
            var loginEmailSelector = loginFormSelector + ' input[name="uid"]';
            var loginPasswordSelector = loginFormSelector + ' input[name="upass"]';
            var loginCSRFSelector = loginFormSelector + ' input[name="CSRFToken"]';

            //Wait for the DOM before we fix some selectors for the inline display mode
            $(function() {
                //Save some selectors to improve maintainability
                if (inlineDisplay &&  $(loginFormSelector).attr('id') == undefined) {
                    //Use the parent form if running in inline mode
                    loginFormId = $('#' + inlineFormDetectionElementID).closest('form').attr('id')
                    loginFormSelector = '#' + loginFormId;
                    loginStatusSelector = loginFormSelector + ' .ajaxStatus';
                    loginEmailSelector = loginFormSelector + ' input[name="uid"]';
                    loginPasswordSelector = loginFormSelector + ' input[name="upass"]';
                    loginCSRFSelector = loginFormSelector + ' input[name="CSRFToken"]';
                }
                if (statusMessageSelector) {
                    if ($(statusMessageSelector) != undefined && $(loginStatusSelector) != undefined && $(loginStatusSelector).html() != '')
                        $(statusMessageSelector).html($(loginStatusSelector).html()); //Copy over default status message
                    $(loginStatusSelector).hide(); //May hide both
                    loginStatusSelector = statusMessageSelector;
                    $(loginStatusSelector).show(); 
                }
            });



            function checkLogin() {
                if (typeof preLoginJavascript == 'function') {
                    if (preLoginJavascript() == false)
                        return false; //block login
                }
                    
                var theForm = $(loginFormSelector);
                var statusElement = $(loginStatusSelector);
				var section = theForm.parent();
                var email = $(loginEmailSelector).val();
                var password = $(loginPasswordSelector).val();
                var CSRFToken = $(loginCSRFSelector).val();

                if (loginInProgress)
                    return false; //Block form submissions while the prior request is still in progress
                if (email == '' || password == '') {
					ajaxStatusError(section, 'Email and Password required');
                    //statusElement.html('<span class="bad">Email and Password required</span>');
                    return false;
                }
                loginInProgress = true;
                loginRequestNum++;

                var localLoginRequestNum = loginRequestNum; //Keep track of the current local request
				ajaxStatusLoading(section, 'Checking credentials, please wait...');
                //statusElement.html(' <span class="info">Checking credentials, please wait...</span>');
                //statusElement.prepend(ajaxLoaderImg);

                //Setup loginTimeout
                if (isNaN(loginTimeout))
                    loginTimeout = 10000; //Default to 10sec if no valid number is sent in 
                //Not needed with json requests; would be needed with jsonp (from another server)  more info: http://bugs.jquery.com/ticket/8744
                //var timer = window.setloginTimeout(function () {
                //    abortRequest(statusSelector, '<span class="bad">Request timed out, try again</span>');
                //}, loginTimeout);  //loginTimeout is in milliseconds

                $.ajax({
                    url: 'DataWebService.asmx/CheckLoginAndGetAccessList',
                    type: "POST",
                    data: '{"Email": ' + JSON.stringify(email) + ', "Password": ' + JSON.stringify(password) + ', "CSRFToken": ' + JSON.stringify(CSRFToken) + '}',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    xhrFields: {
                        withCredentials: true
                    },
                    loginTimeout: loginTimeout, //For json, not jsonp
                    success: function (msg) {
                        if (typeof timer !== 'undefined')
                            window.clearloginTimeout(timer); //turn off the loginTimeout timer
                        loginInProgress = false;
                        if (localLoginRequestNum != loginRequestNum)
                            return false; //Invalid request number, ignore
						ajaxStatusSuccess(section, 'Login successful, please wait...');
                        //statusElement.html('<span class="good">Login successful, please wait...</span>');
                        //statusElement.prepend(ajaxLoaderImg);
                        var blockAction = false;
                        if (typeof postLoginJavascript == 'function')
                            blockAction = (postLoginJavascript() == false); //false return blocks redirect/refresh
                        if (!blockAction) {
                            if (loginSkipRedirect)
                                location.reload();
                            else
                                theForm.submit(); //must be a form submit to allow for SSL secured form posted credentials; do not use a javascript redirect
                        }
                    }, //End success function
                    error: function (xhr, textStatus, errorThrown) {
                        if (typeof timer !== 'undefined')
                            window.clearloginTimeout(timer); //turn off the loginTimeout timer
                        loginInProgress = false;
                        if (localLoginRequestNum != loginRequestNum)
                            return false; //Invalid request number, ignore
                        var showStandardError = true;
                        if (typeof loginErrorJavascript == 'function') {
                            if (loginErrorJavascript() == false)
                                showStandardError = false;
                        }
                        if (showStandardError)
                            showErrorResponse($(loginStatusSelector), xhr, textStatus, errorThrown, true);
							statusElement.removeClass('loading').addClass('error');
							
                    } //End error function
                });
                return false; //block html form submit while the Ajax check is in progress, it'll submit the form when ready
            }

            // Send a Password Reset email which contains a link to reset their password
            function sendPasswordReset() {
                var statusElement = $(loginStatusSelector);
                var emailVal = $(loginEmailSelector).val();
                var promotionCode = 'CC'; //So the email is sent from the associated business unit
				var theForm = $(loginFormSelector);
				var section = theForm.parent();
                if (emailVal == '') {
					ajaxStatusError(section, 'Email is required');
                    //$(loginStatusSelector).html('<span class="bad">Email is required</span>');
                    return false;
                }
				ajaxStatusLoading(section, 'Sending email, please wait...');
                //statusElement.html(' <span class="info">Sending email, please wait...</span>');
                //statusElement.prepend(ajaxLoaderImg);
                $.ajax({
                    url: 'JsonWebService.svc/SendPasswordReset',
                    data: {
                        Email: JSON.stringify(emailVal),
                        PromotionCode: JSON.stringify(promotionCode)
                    },
                    crossDomain: true,
                    dataType: 'jsonp',

                    success: function (data) {
                        if (data.ExceptionType && data.Message) { //Error
							ajaxStatusError(section, data.Message);
                            //$(loginStatusSelector).html('<span class="bad">' + data.Message + '</span>');
                        } else {
							ajaxStatusSuccess(section, 'Email sent, please check your inbox.');
                            //$(loginStatusSelector).html('<span class="info">Email sent, please check your inbox.</span>');
                        }
                    },

                    error: function () {
						ajaxStatusError(section, 'There was an error processing your request. Please check your email address and try again.');
                        //$(loginStatusSelector).html('<span class="bad">There was an error processing your request. Please check your email address and try again.</span>');
                    }
                });
                return false;
            }

            //Function to abort/invalidate the currently running call
            //Might be useful to invoke automatically if the user changes any form value; see here for change detection ideas: http://stackoverflow.com/questions/1948332/detect-all-changes-to-a-input-type-text-immediately-using-jquery
            function abortRequest(statusSelector, msg) {
                $(statusSelector).html(msg);
                loginInProgress = false;
                loginRequestNum++;
                return false;
            }
        }
        catch (err) {
            reportError('ajaxLogin script', err);
        }

		//]]>
	</script>
    <script type="text/javascript">
        function validate(theForm) {
			try {
				//console.log('form submitted');
				var result = validateLoginForm(theForm);
				if (!result){
						//console.log('bad login');
						$('.loginError').html('');
						
						return false;
						
					}
				else {
					//console.log('checking credentials');
					$('.ajaxStatus').removeClass('error').html('Checking credentials, please wait...').addClass('loading');
					$('.loginError').html('');
					return true;
				}
			}
			catch (err) {}
        }

    </script>
