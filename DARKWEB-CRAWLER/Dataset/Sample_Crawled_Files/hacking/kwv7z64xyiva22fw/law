        function getUrlParams() {
            var vars = {};
            window.location.href.replace(/[?&]+([^=&]+)=([^&#]*)/gi, function (m, key, value) {
                vars[key] = decodeURIComponent(value);
            
            });
            return vars;
        }

        function launchChatWindow() {
                 var imgsrc='';
               
            var param =getUrlParams();
 
           var a=document.getElementById("wrapper").getElementsByTagName("div")[0].getElementsByTagName('img');

           
             if(a==null || a== undefined ||a.length==0)
            {
                 if((param["promoCode"] !=null && param["promoCode"].toLowerCase() == 'cpo') || (param["p"] !=null && params["p"].toLowerCase()=='cpo'))
              {
                imgsrc='../Registration/images/clp/CPO.PNG';

              }
		else
		{
	 	 a=document.getElementById('wrapper').getElementsByClassName('main-navigation')[0].getElementsByClassName('relLink')[0].getElementsByTagName('img');
  		imgsrc= a[0].src;
		}

                  a=document.getElementById('wrapper').getElementsByClassName('main-navigation')[0].getElementsByClassName('relLink')[0].getElementsByTagName('img'); 
            }

		else
{
  imgsrc= a[0].src;
}

                // var tenant = 'ALM';
                // var profiles = 'My Account Support';

                // window.open('ChatConsole/chat.html?tenant=' + tenant + '&profiles=' + profiles + '&sessionId=' + '&promoCode=' + param["promoCode"].toUpperCase()+'&ims='+a[0].src,
                //'five9_chat',
            //'left=50,top=50,width=320,height=500,location=no,menubar=no,resizable=no,scrollbars=no,status=no,titlebar=no,toolbar=no');
           var rootUrl = Config.rootUrl + 'ChatConsole';
           var url = rootUrl;
           url = encodeURI(url);
           var props = 'left=50,top=50,width=475,height=550,location=no,menubar=no,resizable=no,scrollbars=no,status=no,titlebar=no,toolbar=no';
           window.open(Config.rootUrl, 'Five9Chat', props);
        }
function getCookie(cname) {
    var name = cname + "=";
    var ca = document.cookie.split(';');
    for(var i=0; i<ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0)==' ') c = c.substring(1);
        if (c.indexOf(name) == 0) return c.substring(name.length,c.length);
    }
    return "";
}

function CheckValidPublicationForChat() {
    try {
        var Email = '';
        document.getElementById("five9_chat_window").style.display = "none";

        var xmlhttp = new XMLHttpRequest();
        xmlhttp.onreadystatechange = function () {
            if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {

                var x = xmlhttp.responseXML.getElementsByTagName("Configuration");


                for (i = 0; i < x.length; i++) {
                   
                    var publications = x[i].getElementsByTagName("Publication");
                   
                    var IsEnableChat = x[i].getElementsByTagName("IsEnableChat")[0].childNodes[0].nodeValue;
                   
                    var IsDisplayOnSignIn = x[i].getElementsByTagName("IsDisplayOnSignIn")[0].childNodes[0].nodeValue;

                   
                    // var Chat = publications.split(',');
                    
                    var params = getUrlParams();
                    if (IsEnableChat == 1) {

                        for (var i = 0 ; i < publications.length ; i++) {
                            if ((params["promoCode"] != null && params["promoCode"].toLowerCase() == publications[i].getAttribute('name').toLowerCase() || ((params["p"] != null
                                                         && params["p"].toLowerCase() == publications[i].getAttribute('name').toLowerCase()))) && publications[i].getAttribute('ShowValue') == '1') {
                                if ((IsDisplayOnSignIn == 0 || (Email != null && Email != undefined && Email != ""))) {                
                          
                                    document.getElementById("five9_chat_window").style.display = "block";
                                } else {

                                    document.getElementById("five9_chat_window").style.display = "none";
                                }


                            }
                        }
                    }

                }


            }
        };
        xmlhttp.open("GET", "../Registration/ChatConsole/ChatConfiguartions/chatconfigurations.xml?_=" + new Date().toDateString() + new Date().getTime().toString(), true);
        xmlhttp.send();
    }
    catch (err) { }
    }


    CheckValidPublicationForChat();
    </script>
    
   <script type="text/javascript">
  
