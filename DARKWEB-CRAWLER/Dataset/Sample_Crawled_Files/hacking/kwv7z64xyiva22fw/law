      function _scStrip(a){
         a = a.split("|").join("");
	 a = a.split("&").join("");
	 a = a.split("'").join("");
	 a = a.split("#").join("");
	 a = a.split("$").join("");
	 a = a.split("%20").join(" ");	 
	 a = a.split("%").join("");
	 a = a.split("^").join("");
	 a = a.split("*").join("");
	 a = a.split("!").join("");
	 a = a.split("<").join("");
	 a = a.split(">").join("");
	 a = a.split("~").join("");
	 a = a.split(";").join("");
	 a = a.split("-").join("");
	 a = a.split(".").join("");
	 a = a.split(": ").join(":");
	 a = a.split(" :").join(":");
         return a;    
      }
function getCookieByName(name){ 
	var cookies, cookie, endValue, value; 
	cookies = document.cookie; 
	cookies = cookies.split('; ' + name + '='); 
	if(typeof cookies[1] != 'undefined'){ 
		cookie = cookies[1]; 
	}else{ 
		cookie = ''; 
	} 
	endValue = cookie.indexOf(';'); 
	value = cookie.substr(0, endValue); 
	return value; 
}
	if(getCookieByName("useremail")){
		email = getCookieByName("useremail");
	}
	if(getCookieByName("userId")){
		userId = getCookieByName("userId");
	}
if (location.pathname == "/"){
contentType = "home";
}
if (location.search.search("letter")>0){
contentType = "hub";
}
if (location.search.search("selected")>0){
	contentType = "term detail";
}

