$(document).ready(function() {

	var sideNavHolderElem = $('#side-nav');
	var subNavHolderElem = $('.main-nav-right');

	function getCookie(cname) {
	  var name = cname + "=";
	  var decodedCookie = decodeURIComponent(document.cookie);
	  var ca = decodedCookie.split(';');
	  for(var i = 0; i < ca.length; i++) {
	    var c = ca[i];
	    while (c.charAt(0) == ' ') {
	      c = c.substring(1);
	    }
	    if (c.indexOf(name) == 0) {
	      return c.substring(name.length, c.length);
	    }
	  }
	  return "";
	}

	var loginCookie = getCookie("userAccount");

	//Toggling login status
	if(loginCookie !== "") {
		//User logged in
		sideNavHolderElem.find('.logged-in').removeClass('hidden-common');
		subNavHolderElem.find('.logged-in').removeClass('hidden-common');
	} else {
		//User not logged in
		sideNavHolderElem.find('.logged-out').removeClass('hidden-common');
		subNavHolderElem.find('.logged-out').removeClass('hidden-common');
	}
});

</script>


