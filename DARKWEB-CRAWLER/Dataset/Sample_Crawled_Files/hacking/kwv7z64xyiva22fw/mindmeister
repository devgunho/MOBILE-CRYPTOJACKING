    <script type="text/javascript">
      if (mm$('user_password')) {
        /* by default the password confirmation is required, but we want
         * to make te signup process as quick as possible */
        (function () {
          var updatePasswordConfirmation = function () {
            mm$('user_password_confirmation').value = mm$('user_password').value;
            return false;
          };

          mm$('user_password').onchange = updatePasswordConfirmation;
          if (mm$('user_email')) mm$('user_email').onchange = updatePasswordConfirmation;

          if (MM.ua.isPlatform('Macintosh') && mm$('user_name').value.length === 0) mm$('user_name').focus();

          MM.utils.loadModule('passwordStrength', function(module) {
              module.watch('password_container', 'user_password');
          });
        })();
      }
    </script>


<script type="text/javascript">

  (function() {
    var formValidatorEmail = new MM.ui.FormValidator('user_email', '/users/remote_validate?attribute=email', {
      onErrorMessage: function (response) {
        var newProduct = 'MindMeister';
        if (response.extraInfo && response.extraInfo.otherProduct !== newProduct) {
          MM.ui.Account.onExistingEmail(newProduct, response);
        } else {
          MM.ui.Account.onValidationError('user_email', response.errorMessage);
        }
      },

      onSuccess: function () {
        MM.ui.Account.onValidEmail();
      }
    });

    if (mm$('user_email') && (mm$('user_email').value !== '' || mm$('user_email').readonly)) formValidatorEmail.checkField();

    var formValidatorName = new MM.ui.FormValidator('user_name', '/users/remote_validate?attribute=name', {
      onErrorMessage: function (response) {
        MM.ui.Account.onValidationError('user_name', response.errorMessage);
      },

      onSuccess: function () {
        var el = mm$('user_name');
        hide(mm$('msg_user_name'));
        removeClassName(el.parentNode, 'fieldWithErrors');
        el.setAttribute('data-valid', true);
      }
    });

    if (mm$('user_name').value !== '') formValidatorName.checkField();

    var formValidatorPassword = new MM.ui.FormValidator('user_password', '/users/remote_validate?attribute=password', {
      onErrorMessage: function (response) {
        MM.ui.Account.onValidationError('user_password', response.errorMessage);
      },

      onSuccess: function () {
        hide(mm$('msg_user_password'));
        removeClassName(mm$('user_password').parentNode, 'fieldWithErrors');
        mm$('user_password').setAttribute('data-valid', true);
      }
    });

    if (mm$('user_password') && mm$('user_password').value !== '') formValidatorPassword.checkField();
  })();
</script>

