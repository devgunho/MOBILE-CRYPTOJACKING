'/solutions/security-management/': ''
};
var platespin_voip_operations_group = {
'/products/forge': '',
'/products/appmanager': '',
'/products/cloud-manager': '',
'/products/operations-center': '',
'/products/protect': '',
'/products/recon': '',
'/products/migrate': '',
'/products/unified-communications-and-voip-management/features': '',
'/products/aegis': '',
'/solutions/it-operations-management': '',
'/solutions/disaster-recovery': '',
'/solutions/workload-migration': '',
'/solutions/unified-communications-voip': ''
};

// block live chat pages
var block_live_chat_pages = {
	'/services': '',
	'/support': '',
	'/consulting': ''
};

jQuery(document).ready(function() {
	var pathname = window.top.location.pathname;
	var hostname = window.top.location.hostname;
	var in_identity_access_security_group = false;
	for (var i in identity_access_security_group) {
		if (pathname.indexOf(i) > -1) {
			in_identity_access_security_group = true;
			break;
		}
	}
	var in_platespin_voip_operations_group = false;
	for (var x in platespin_voip_operations_group) {
		if (pathname.indexOf(x) > -1) {
			in_platespin_voip_operations_group = true;
			break;
		}
	}
	var in_block_live_chat_pages = false;
	for (var q in block_live_chat_pages) {
		if (pathname.indexOf(q) > -1) {
			in_block_live_chat_pages = true;
			break;
		}
	}
	if (hostname.indexOf('training') != -1) {
		in_block_live_chat_pages = true;
	}


	if ( typeof demandbase_data_promise == 'object' ) {
		jQuery.when(demandbase_data_promise).done(function(demandbase_ip_data) {
			var have_country_code = typeof demandbase_ip_data.country == 'string' || typeof demandbase_ip_data.registry_country_code == 'string';

			var country_code = '';
			if (have_country_code) {
				if (typeof demandbase_ip_data.country == 'string') {
					country_code = demandbase_ip_data.country;
				}
				if (typeof demandbase_ip_data.registry_country_code == 'string') {
					country_code = demandbase_ip_data.registry_country_code;
				}
			}

			// If there is nothing returned by demandbase, show en-us
			if (typeof demandbase_ip_data != 'object' || demandbase_ip_data == null || !have_country_code) {
				jQuery('.livechat_button').hide();
				jQuery('.livechat_button.north_a_english').show();
				__lc.group = 13; // english north america

				(function() {
					var lc = document.createElement('script'); lc.type = 'text/javascript'; lc.async = true;
					lc.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'cdn.livechatinc.com/tracking.js';
					var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(lc, s);
				})();

			// else if demandbase returns something that isn't north america
			} else if (country_code != '' && country_code != 'US' && country_code != 'CA') {

				//If this is a non-english supported lanugage (as defined by var groups above)
				if (typeof groups[user_lang] == 'number') {
					__lc.group = groups[user_lang];
					jQuery('.livechat_button.en-us').hide();
					jQuery('.livechat_button.' + user_lang).show();

				// Non-north america english and non-NA non-supported lanuages.
				} else { // just do below if want to be only emea english
					// IF demandbase reported country is in the APJcountries array and language is Enlglish, show the APJ english. Otherwise, show EMEA.
					if (APJcountries.indexOf(country_code) > -1 && user_lang == 'en-us') {
						//Show APJ stuff
						jQuery('.livechat_button.en-us').hide();
						jQuery('.livechat_button.apj_english').show();
						__lc.group = 18; //APJ English group
					} else {
						jQuery('.livechat_button.en-us').hide();
						jQuery('.livechat_button.emea_english').show();
						__lc.group = 14; // default to english (outside US english)
					}
				}

				(function() {
					var lc = document.createElement('script'); lc.type = 'text/javascript'; lc.async = true;
					lc.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'cdn.livechatinc.com/tracking.js';
					var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(lc, s);
				})();

			// Show north america, baby
			} else {
				if (in_block_live_chat_pages == false) {
					/////////////////////////////////////////
					// going groupless for now for US
					jQuery('.livechat_button').hide();
					////////////////////////////////////////
					// non groupless code
					if (in_identity_access_security_group) {
						jQuery('.livechat_button.identity-access-security').show();
						__lc.group = 11;
					} else if (in_platespin_voip_operations_group) {
						jQuery('.livechat_button.platespin-voip-operations').show();
						__lc.group = 12;
					} else {
						jQuery('.livechat_button.north_a_english').show();
						__lc.group = 13; // english north america
					}


					(function() {
						var lc = document.createElement('script'); lc.type = 'text/javascript'; lc.async = true;
						lc.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'cdn.livechatinc.com/tracking.js';
						var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(lc, s);
					})();
				} else {
					jQuery('.cta_chat').hide();
				}
			}
		});
	}
});
</script>


	<script type="text/javascript" src="/home/home.js?v=6"></script>

</body>
</html>



