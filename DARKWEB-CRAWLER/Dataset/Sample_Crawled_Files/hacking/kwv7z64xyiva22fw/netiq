<script>
var __lc = {};
__lc.license = 3379932;
if (typeof String.prototype.startsWith != 'function') {
	String.prototype.startsWith = function (str){
	return this.indexOf(str) == 0;
	};
}
var groups  = {
	'de-de': 5, // german --
	'es-es': 4, // spanish --
	'fr-fr': 8, // french --
	'pt-br': 3, // portugese --
	'it-it': 6, // italian --
	'nl-nl': 9, // dutch --
	'pl-pl': 10, // polish --
	'sv-se': 7 // swedish --
};

// Australia, New Zealand, Singapore, Malaysia, Indonesia, Philippines, Vietnam, India, Hong Kong
var APJcountries = ['AU','NZ','SG','MY','ID','PH','VN','IN','HK'];

var identity_access_security_group = {
'/products/access-governance-suite': '',
'/products/access-manager': '',
'/products/access-review': '',
'/products/advanced-authentication-framework': '',
'/products/cloudaccess': '',
'/products/directory-resource-administrator': '',
