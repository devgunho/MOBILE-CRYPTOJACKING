<script>
$(document).ready(function() {
  var ba_weather_city = '551801';
  $.getJSON('//query.yahooapis.com/v1/public/yql?q=select%20*%20from%20weather.forecast%20where%20woeid%3D'+ba_weather_city+'%20limit%201&format=json&diagnostics=true&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys&callback=?', function(data){
    // console.log(data);
    if (typeof data.query.results.channel !== 'undefined') {
      var item = data.query.results.channel.item;
      var datetime = item.condition.date;
      var date = datetime.match(/^.*[0-9]{4}/g);
      var hour = datetime.toLowerCase().match(/[0-9]{1,2}:[0-9]{1,2} (am|pm)/g);
      var actual = Date.parse(date+' '+hour);
      var sunrise = Date.parse(date+' '+data.query.results.channel.astronomy.sunrise);
      var sunset = Date.parse(date+' '+data.query.results.channel.astronomy.sunset);
      //Day = 'd'; Night = 'n'
      var day_or_night = (actual > sunrise && actual < sunset) ? 'd': 'n';
      var temp_celsius = Math.round((data.query.results.channel.item.condition.temp-32)*(5/9));

      // WEATHER WIDGET
      $('div.smrt-weather img').attr('src','/files/img/pollock/weather/line/'+data.query.results.channel.item.condition.code+day_or_night+'.png');
      $('div.smrt-weather .-farenheit').text(data.query.results.channel.item.condition.temp);
      $('div.smrt-weather .-celsius').text(temp_celsius);
      $('div.smrt-weather').removeClass('hidden-md').removeClass('hidden-lg').removeClass('hidden-xl');
      $('div.smrt-weather').fadeIn();
    }
  });
});
</script>
<!-- WEATHER> -->
<script>
   <!-- SETS DEFAULT VALUES FOR THE FORM ELEMENTS: START-->
(function() {
  var presetDefaults = document.getElementsByClassName('default-set');
  for (var i=0; i<presetDefaults.length; i++) {
    var el = presetDefaults[i];
    var defaultValue = el.getAttribute('data-default');
    switch(el.tagName) {
      case 'SELECT':
        for (var j = 0; j < el.options.length; j++) {
          if (el.options[j].value === defaultValue) {
            el.options[j].defaultSelected = true;
            el.value = defaultValue;
            break;
          }
        }
        break;
      case 'INPUT':
      case 'TEXTAREA':
        el.value = defaults;
        break;
    }
  }
})();
<!-- SETS DEFAULT VALUES FOR THE FORM ELEMENTS: END-->
</script>
