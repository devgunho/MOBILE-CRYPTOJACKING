  <div class="locations-container visible-sm visible-xs">
    <article class="location js-title">
      <div class="location-header row">
        <div class="col-xs-12">
          <h4 class="title">Los Angeles, <span>California</span><i class="fa fa-angle-down fa-lg pull-right"></i></h4>
        </div>
      </div>
      <div class="location-content">
        <div class="row">
          <div class="bg-img">
            <img src="http://www.purch.com/wp-content/themes/PurchTheme2017/images/ImageLocationCulver.jpg">
          </div>
