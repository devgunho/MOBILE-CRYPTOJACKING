<script>
  if (!document.fonts) {
    var el = document.getElementById('chorus-fonts');
    var data = JSON.parse(el.getAttribute('data-cdata'));
    var FONTS_LOADED_CLASS = 'fonts-loaded';
    var SUCCESS = function() {};

    var fontPromises = data.fonts_catalog.map(function(def) {
      return new FontFaceObserver(def.family, def).load(null, 10000).then(SUCCESS, function() {
        console.log('Font failure: '+JSON.stringify(def));
      });
    });

    Promise.all(fontPromises).then(function() {
      document.documentElement.classList.add(FONTS_LOADED_CLASS);
    }, function() {
      document.documentElement.classList.add(FONTS_LOADED_CLASS);
    });
  }
</script>

  

